{
  "kind": "collectionType",
  "collectionName": "surat_jalans",
  "info": {
    "singularName": "surat-jalan",
    "pluralName": "surat-jalans",
    "displayName": "Surat"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "no_surat_jalan": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Surat Jalan"
          ]
        }
      }
    },
    "no_surat_permintaan": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Surat Jalan"
          ]
        }
      }
    },
    "tanggal": {
      "type": "datetime",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Surat Jalan"
          ]
        }
      }
    },
    "perihal": {
      "type": "text"
    },
    "lokasi_asal": {
      "type": "string"
    },
    "lokasi_tujuan": {
      "type": "string"
    },
    "materials": {
      "type": "component",
      "component": "global.material",
      "repeatable": true
    },
    "penerima": {
      "type": "component",
      "component": "global.penerima",
      "repeatable": false
    },
    "pengirim": {
      "type": "component",
      "component": "global.pengirim",
      "repeatable": false
    },
    "lampiran": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "status_surat": {
      "type": "enumeration",
      "enum": [
        "In Progress",
        "Approve",
        "Reject"
      ]
    },
    "pesan": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Surat Jalan"
          ]
        }
      }
    },
    "emails": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::email.email",
      "mappedBy": "surat_jalan"
    },
    "catatan_tambahan": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Surat Jalan"
          ]
        }
      }
    },
    "informasi_kendaraan": {
      "type": "string"
    },
    "nama_pengemudi": {
      "type": "string"
    },
    "status_entry": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Published"
      ]
    },
    "kategori_surat": {
      "type": "enumeration",
      "enum": [
        "Surat Jalan",
        "Berita Acara Material Bongkaran",
        "Berita Acara Pemeriksaan Tim Mutu"
      ]
    },
    "no_berita_acara": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Berita Acara Material Bongkaran"
          ]
        }
      }
    },
    "no_perjanjian_kontrak": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Berita Acara Material Bongkaran"
          ]
        }
      }
    },
    "tanggal_kontrak": {
      "type": "datetime",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Berita Acara Material Bongkaran"
          ]
        }
      }
    },
    "cop_surat": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Berita Acara Material Bongkaran"
          ]
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "mengetahui": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kategori_surat"
            },
            "Berita Acara Material Bongkaran"
          ]
        }
      },
      "component": "global.mengetahui",
      "repeatable": false
    }
  }
}
